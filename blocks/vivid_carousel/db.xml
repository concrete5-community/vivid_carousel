<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 https://concretecms.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

  <table name="btVividCarousel">
    <field name="bID" type="integer">
      <unsigned />
      <key />
    </field>
    <field name="itemsmobile" type="integer">
      <unsigned />
    </field>
    <field name="itemstablet" type="integer">
      <unsigned />
    </field>
    <field name="itemsdesktop" type="integer">
      <unsigned />
    </field>
    <field name="thumbwidth" type="integer">
      <unsigned />
    </field>
    <field name="thumbheight" type="integer">
      <unsigned />
    </field>
    <field name="carouselTitle" type="string" size="255" />
  </table>

  <table name="btVividCarouselItem">
    <field name="id" type="integer">
      <unsigned />
      <autoincrement />
      <key />
    </field>
    <field name="bID" type="integer">
      <unsigned />
    </field>
    <field name="fID" type="integer">
      <unsigned />
      <default value="0" />
    </field>
    <field name="title" type="string" size="255" />
    <field name="carcontent" type="text" />
    <field name="pageID" type="integer">
      <unsigned />
      <default value="0" />
    </field>
    <field name="btntext" type="string" size="255" />
    <field name="sort" type="integer" />
  </table>

</schema>
